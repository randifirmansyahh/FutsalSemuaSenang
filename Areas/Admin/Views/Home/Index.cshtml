@model IEnumerable<FutsalSemuaSenang.Models.Booking>

@{ Layout = "_AdminLayout"; }

<br />
<h3 align="center" style="font-family:'Comic Sans MS'">Semua Order Booking</h3>
<br />

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <td align="center" width="5%">
                    <strong style="font-size:15px">Nomor</strong>
                </td>
                <td align="center" width="5%">
                    <strong style="font-size:15px">Id User</strong>
                </td>
                <td align="center" width="10%">
                    <strong style="font-size:15px">Nama Lapangan</strong>
                </td>
                <td align="center" width="10%">
                    <strong style="font-size:15px">Tanggal Booking</strong>
                </td>
                <td align="center" width="10%">
                    <strong style="font-size:15px">Jam Mulai</strong>
                </td>
                <td align="center" width="10%">
                    <strong style="font-size:15px">Jam Selesai</strong>
                </td>
                <td align="center" width="10%">
                    <strong style="font-size:15px">Harga</strong>
                </td>
                <td align="center" width="10%"><strong style="font-size:15px">Status Konfirmasi</strong></td>
            </tr>
        </thead>
        <tbody>
            @{ 
                var nomor = 1;
            }
            @foreach (var item in Model)
            {
            <tr>
                <td align="center">
                    @nomor
                    @{
                        nomor += 1;
                    }
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.IdUser)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.NamaLapangan)
                </td>
                <td align="center">
                    @item.Tanggal
                </td>
                <td align="center">
                    @item.JamMulai.00 WIB
                </td>
                <td align="center">
                    @item.JamSelesai.00 WIB
                </td>
                <td align="center">
                    Rp. @item.Harga
                </td>
                @{ if (item.Status == true)
                    {
                        <td align="center">
                            <a href="@Url.Action("BatalkanKonfirmasi", "Home", new { id = item.Id })"
                               class="fas fa-download fa-2x" title="Batalkan Konfirmasi" style="color:red"
                               onclick="if (! confirm('\n\nYakin untuk Membatalkan Order Booking ini ?\n\nJika ya, email pembatalan akan dikirimkan kepada User tersebut\n\n')) { return false; }">
                            </a>
                        </td>
                    }
                    else
                    {
                        <td align="center">
                            <a href="@Url.Action("Konfirmasi", "Home", new { id = item.Id })"
                               class="fas fa-upload fa-2x" title="Konfirmasi" style="color:green"
                               onclick="if (! confirm('\n\nYakin untuk Mengkonfirmasi Order Booking ini ?\n\nJika ya, email konfirmasi akan dikirimkan ke User tersebut\n\nDan Booking dengan tanggal dan waktu yang sama akan dihapus dan dikirim email kepada pembooking')) { return false; }">
                            </a>
                        </td>
                    }
                }
            </tr>
            }
        </tbody>
    </table>
</div>
<br />
<br />