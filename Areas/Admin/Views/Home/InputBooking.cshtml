@{
    Layout = "_AdminLayout";
}

<style>
    .form {
        margin: 10px 500px 10px 500px;
        color: white;
    }

    h2 {
        margin: 51px 0 52px 0;
    }

    .utama {
        background-color: gray;
        padding: 1px 0 150px 0;
    }
</style>

<div class="utama">
    <div class="form">
        <h2 align="center">Silahkan Isi Tanggal dan Waktu Booking</h2>
        <form class="row g-3" action="InputBooking" method="POST">
            <div class="col-md-12">
                <label for="validationDefault01" class="form-label">email</label>
                <input type="email" name="EmailUser" class="form-control" required>
            </div>
            <div class="col-md-12">
                <label for="validationDefault01" class="form-label">Tanggal</label>
                <input type="date" name="Tanggal" id="Tanggal" class="form-control" required>

                <script>
                    document.getElementById('Tanggal').value = new Date().toISOString().split('T')[0];
                </script>

            </div>
            <div class="col-md-12">
                <label class="form-label">Pilih jam</label>
                <select name="JamMulai" id="JamMulai" class="form-control" onchange="cekJam()" required>
                    <option value="" disabled selected>Pilih jam mulai</option>
                    <option value="13">13.00</option>
                    <option value="14">14.00</option>
                </select>
            </div>
            <div class="col-md-12">
                <label class="form-label">Durasi</label>
                <select name="Durasi" id="Durasi" class="form-control" required>
                    <option value="" disabled selected>Isi jam mulai terlebih dahulu</option>
                </select>

                <script>
                    function cekJam() {

                        var jamMulai = document.getElementById("JamMulai").value;
                        var isiSelect = "";

                        if (jamMulai == 13) {
                            for (let a = 1; a < 3; a++) {
                                isiSelect += '<option value=' + a + '>' + a + ' Jam</option>';
                            }
                        } else if (jamMulai == 14) {
                            for (let a = 1; a < 2; a++) {
                                isiSelect += '<option value=' + a + '>' + a + ' Jam</option>';
                            }
                        }
                        document.getElementById("Durasi").innerHTML = isiSelect;
                    }
                </script>
            </div>
            <div class="col-12" align="center" style="margin:36px 0 36px 0;">
                <button class="btn btn-success btn-lg" type="submit">Booking Sekarang</button>
            </div>
            <div align="center">
                @if (@ViewBag.Message != null)
                {
                    <h4 style="font-family:'Times New Roman';color:red;background-color:white;border-radius:20px;padding:10px 0 10px 0">
                        @ViewBag.Message
                    </h4>
                }
            </div>
        </form>
    </div>
</div>